<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="purpleDark" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purpleDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.AllCaps" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Button.Flow" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:background">@drawable/next_button_selector</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Flow.Purple" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:background">@drawable/next_button_selector_purple</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.InviteActivity" parent="Button.Flow">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <!--TODO add padding between label and cursor-->
    <!--TODO Show hint when there is no text-->
    <style name="EditText.Flow" parent="@android:style/Widget.EditText">
        <item name="android:textSize">26sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/edittext</item>
    </style>

    <style name="EditText.Label" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
